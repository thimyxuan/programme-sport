	<!-- ZONE 3 : comment ça marche -->
	<div class="zone3">
            <h2>Comment ça marche ?</h2>
            <ul>
                <li>
                    <figure><img src="{{ asset('image/decouvrez.jpg') }}" alt="image">
                    <figcaption><a href="#"><p>Découvrez</p> les programmes sportifs des membres par objectifs</a></figcaption>
                    </figure>
                </li>
                <li>
                    <figure><img src="{{ asset('image/inscrire.jpg') }}" alt="image">
                    <figcaption><a href="#"><p>Adhérez</p> pour partagez vos propres programmes personnalisés</a></figcaption>
                    </figure>
                </li>
                <li>
                    <figure><img src="{{ asset('image/retrouver.jpg') }}" alt="image">
                    <figcaption><a href="#"><p>Retrouvez</p> facilement vos programmes dans votre espace personnel</a></figcaption>
                    </figure>
                </li>
            </ul>
	</div>

	<!-- ZONE 4 : slider -->
