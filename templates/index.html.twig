{% extends "layout.html.twig" %}

{% block content %}
    
        <main>
	<!-- ZONE 1  : background avec menu en colonne -->
	<div class="zone1">
            <div class="zone1-texte">
                <div class="slogan"><h1>Zone de libre échange</h1></div>
                <div class="slogan-detail"><p>Découvrez et partagez vos meilleurs programmes sportifs</p></div>
            </div>
            <div class="colonne-menu">                    
                    {{ render(url('objectif_menu'))}}
            </div>
        </div>
            

	<!-- ZONE 2 : bandeau pub -->
	<div class="zone2">
            <div class="zone2-container1">
                <p>Bougez à votre rythme avec <img src="{{ asset('image/logo-blanc.gif') }}" alt="image" id="zone2-logo"></p>
